{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/fieldset/macro.njk"       import govukFieldset %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("businessUTR.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ submitUrl }}" method="post">

          {{ csrf() | safe }}

          {% call govukFieldset({
            legend: {
              text: messages('businessUTR.title'),
              classes: "govuk-fieldset__legend--l",
              isPageHeading: true
            }
          }) %}

          <p class="govuk-body">{{messages('businessUTR.p1')}}</p>
          <p class="govuk-body">{{messages('businessUTR.p2')}}</p>
          <p class="govuk-body">{{messages('businessUTR.p3')}}</p>

          {{ govukInput({
            label: {
               html: '<span class="govuk-visually-hidden">' + messages("businessUTR.title") + '</span>'
            },
            id: "value",
            name: "value",
            value: form.value.value,
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.save_and_continue"),
            attributes: {id: "submit"}
          }) }}

          {% endcall %}

        </form>

      </div>
    </div>

{% endblock %}
