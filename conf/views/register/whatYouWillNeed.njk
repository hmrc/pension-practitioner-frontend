{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}


{% block pageTitle %}
  {{ title(messages("whatYouWillNeed.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        {{ messages("whatYouWillNeed.heading") }}
      </h1>

      <p class="govuk-body">
        {{ messages("company.whatYouWillNeed.p1") }}
      </p>
      <ul class="govuk-list govuk-list--bullet">
        <li>{{ messages("company.whatYouWillNeed.li1") }}</li>
        <li>{{ messages("company.whatYouWillNeed.li2") }}</li>
        <li>{{ messages("company.whatYouWillNeed.li3") }}</li>
      </ul>

      {{ govukInsetText({
        text: messages("whatYouWillNeed.p2")
      }) }}


      {{ govukButton({
        href: nextPage,
        attributes: {id: "submit"},
        text: messages("site.continue")
      }) }}

    </div>
  </div>



{% endblock %}
