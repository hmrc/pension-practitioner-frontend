{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("phone.title", messages(viewmodel.entityType)), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">{{messages("phone.title", viewmodel.entityName)}}</h1>

         <p class="govuk-body"> {{ messages("phone.hint") }} </p>

        <form action="{{ viewmodel.submitUrl }}" method="post" novalidate>

          {{ csrf() | safe }}

          {{ govukInput({
            label: {
              text: messages('phone.title', entityName),
              isPageHeading: true,
              classes: "govuk-fieldset__legend--s govuk-visually-hidden"
            },
            id: "value",
            name: "value",
            value: form.value.value,
            type: "tel",
            classes: "govuk-input--width-20",
            attributes: {autocomplete: "none"},
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.save_and_continue"),
            attributes: {id: "submit"}
          }) }}

        </form>

      </div>
    </div>

{% endblock %}
