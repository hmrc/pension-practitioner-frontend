{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("confirmDeregister.company.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <h1 class="govuk-heading-xl">
           {{ messages("confirmDeregister.company.heading", pspName) }}
        </h1>


         <p class="govuk-body">{{ messages("confirmDeregister.company.p1", pspName) }}</p>
         <p class="govuk-body">{{ messages("confirmDeregister.company.p2", pspName) }}</p>


        <form action="{{ submitUrl }}" method="post" autocomplete="off">

          {{ csrf() | safe }}

          {{ govukRadios({
            classes: "govuk-radios--inline",
            name: 'value',
            fieldset: {
              legend: {
                text: messages("confirmDeregister.company.heading", pspName),
                isPageHeading: false,
                classes: "govuk-visually-hidden"
              }
            },
            items: radios,
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.save_and_continue"),
            attributes: {id: "submit"}
          }) }}

        </form>

        <p class="govuk-body"><a href="{{ returnUrl }}">{{ messages("site.return_to", pspName) }}</a></p>

      </div>
    </div>

{% endblock %}
